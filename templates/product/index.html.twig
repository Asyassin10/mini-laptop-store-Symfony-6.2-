{% extends 'base.html.twig' %}

{% block title %}Products list!{% endblock %}

{% block body %}
<div class="row my-5">

    <div class="col-md-10 x-auto ">
{#             {% for message in app.flashes("success") %}
            <div class="alert alert-seccess">
              {{ message }}
            </div>
            {% endfor %} #}
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span class="products_list">List of products</span>
                <a href="{{path('product_store')}}" class="btn btn-sm btn-primary">{{ 'add' |trans}}</a>
            </div>
        <div class="card-body">
            <table class="table table-bordered table-hover products">
                <thead>
                    <tr>
                        <th>{{ 'add' |trans}}</th>
                        <th>{{ 'name' |trans}}</th>
                        <th>{{ 'category' |trans}}</th>
                        <th>{{ 'quantity' |trans}}</th>
                        <th>{{ 'price' |trans}}</th>
                        <th>{{ 'image' |trans}}</th>
                        <th>{{ 'action' |trans}}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in products %}
                    <tr>
                        <th>{{ loop.index }}</th>
                        <th>{{ item.name }}</th>
                        <th>{{ item.category.name }}</th>
                        <th>{{ item.quantity }}</th>
                        <th>{{ item.price }}</th>
                        <th>
                            {% if item.image %}
                            <img src="{{asset('uploads/images/'~ item.image)}}" alt="" width="60" height="60" style="border-radius:10%;">
                            {% else %}
                            No image
                            {% endif %}  
                        </th>
                        <th>  
                             <a href="{{path('product_edit',{id: item.id})}}" class="btn btn-sm btn-success">{{ 'edit' |trans}}</a>
                             <a href="{{path('product_delete',{id: item.id})}}" class="btn btn-sm btn-danger">{{ 'delete' |trans}}</a>
                             <a href="{{path('product_show',{id: item.id})}}" class="btn btn-sm btn-info">{{ 'detail' |trans}}</a>
                        </th>
                    </tr>
                    {% endfor %} 
                </tbody>
            </table>
        </div>    
        </div>
    </div>
</div>
{% endblock %}
